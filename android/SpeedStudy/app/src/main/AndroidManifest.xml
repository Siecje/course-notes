<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="speedstudy.speedstudy" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpeedReader"
            android:label="@string/title_activity_speed_reader"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".LocalFilesBrowser"
            android:label="@string/title_activity_local_files_browser"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".DisplayDocument"
            android:label="@string/title_activity_display_document" >
        </activity>
    </application>

</manifest>
